{
    "manifest_version": 2,
    
    "name": "flighter",
    "description": "Highlights Facebook posts based on the rules you give it",
    "version": "0.1",
    
    "browser_action": {
        "default_popup": "popup.html"
    },
    
    "permissions": [
        "activeTab",
        "pageCapture",
        "storage"
    ]
}
