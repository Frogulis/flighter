{
    "manifest_version": 2,

    "name": "flighter",
    "description": "Highlights Facebook posts based on the rules you give it",
    "version": "0.1",

    "browser_action": {
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["http://www.facebook.com/*"],
            "js": ["./scripts/inkected/Rule.js"]
        }
    ],

    "permissions": [
        "activeTab",
        "pageCapture",
        "storage",
        "tabs"
    ]
}
